<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_regist"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rela_rephone"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_border_color_black"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/iconmbile"
            android:id="@+id/usericon" />

        <com.andream.aiiage.videologin.EditTextWithDel
            android:id="@+id/userphone"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:inputType="number"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/white"
            android:hint="请输入您的手机号"
            android:textSize="13sp"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/usericon"
            android:layout_toRightOf="@+id/usericon" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rela_recode"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_border_color_black"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/key_icon"
                android:id="@+id/key_icon" />
            <com.andream.aiiage.videologin.EditTextWithDel
                android:id="@+id/smscode"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:inputType="number"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/white"
                android:hint="验证码"
                android:textSize="13sp"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/key_icon"
                android:layout_toRightOf="@+id/key_icon" />
        </RelativeLayout>
        <Button
            android:id="@+id/send_smscode"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:text="验证码"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:layout_height="40dp"
            android:gravity="center"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rela_repass"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_border_color_black"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/codeicon"
            android:id="@+id/codeicon" />

        <com.andream.aiiage.videologin.EditTextWithDel
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/codeicon"
            android:layout_toRightOf="@+id/codeicon" />
    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下一步"
        />
</LinearLayout>